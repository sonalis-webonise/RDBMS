create table users(
id SERIAL PRIMARY KEY,
uname varchar(50),
email_id varchar(50),
password varchar(50),
contact varchar(10),
CONSTRAINT email CHECK (email_id ~* '^[A-Za-z0-9._%-]+@[A-Za-z0-9.-]+[.][A-Za-z]+$'),
CONSTRAINT password_len CHECK (length(password) >= 8)
);

drop table products CASCADE;

create table products(
id SERIAL NOT NULL,
name varchar(50),
description varchar(300),
color varchar(50),
price int,
PRIMARY KEY(id)
);


drop table product_cart CASCADE;

create table product_cart(
id SERIAL NOT NULL,
user_id integer references users(id),
product_id int references products(id),
PRIMARY KEY(id)
);

drop table orders CASCADE;

create table orders(
id SERIAL,
quantity int,
discount int,
user_id int references users(id),
cart_id int references product_cart(id),
PRIMARY KEY(id)
);

drop table payments CASCADE;

create table payments(
id SERIAL NOT NULL,
method varchar(50),
total_cost int,
user_id int references users(id),
order_id int references orders(id),
PRIMARY KEY(id)
);


drop table order_status CASCADE;

create table order_status(
id SERIAL NOT NULL,
status varchar(50),
user_id int references users(id),
payment_id int references payments(id),
PRIMARY KEY(id)
);
